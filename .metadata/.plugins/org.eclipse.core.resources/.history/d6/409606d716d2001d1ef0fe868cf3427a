/* GetIdleTaskMemory prototype (linked to static allocation support) */
void vApplicationGetIdleTaskMemory( StaticTask_t **ppxIdleTaskTCBBuffer, StackType_t **ppxIdleTaskStackBuffer, uint32_t *pulIdleTaskStackSize );

/* USER CODE BEGIN GET_IDLE_TASK_MEMORY */
static StaticTask_t xIdleTaskTCBBuffer;
static StackType_t xIdleStack[configMINIMAL_STACK_SIZE];

void vApplicationGetIdleTaskMemory( StaticTask_t **ppxIdleTaskTCBBuffer, StackType_t **ppxIdleTaskStackBuffer, uint32_t *pulIdleTaskStackSize )
{
  *ppxIdleTaskTCBBuffer = &xIdleTaskTCBBuffer;
  *ppxIdleTaskStackBuffer = &xIdleStack[0];
  *pulIdleTaskStackSize = configMINIMAL_STACK_SIZE;
  /* place for user code */
}
/* USER CODE END GET_IDLE_TASK_MEMORY */

/**
  * @brief  FreeRTOS initialization
  * @param  None
  * @retval None
  */
void MX_FREERTOS_Init(void) {
  /* USER CODE BEGIN Init */
	pid_init(&pid, 5, 0.05, 0.05);
  /* USER CODE END Init */

  /* USER CODE BEGIN RTOS_MUTEX */
  /* add mutexes, ... */
  /* USER CODE END RTOS_MUTEX */

  /* USER CODE BEGIN RTOS_SEMAPHORES */
  /* add semaphores, ... */
  /* USER CODE END RTOS_SEMAPHORES */

  /* USER CODE BEGIN RTOS_TIMERS */
  /* start timers, add new ones, ... */
  /* USER CODE END RTOS_TIMERS */

  /* USER CODE BEGIN RTOS_QUEUES */
  /* add queues, ... */
  /* USER CODE END RTOS_QUEUES */

  /* Create the thread(s) */
  /* definition and creation of defaultTask */
  osThreadDef(defaultTask, StartDefaultTask, osPriorityNormal, 0, 128);
  defaultTaskHandle = osThreadCreate(osThread(defaultTask), NULL);

  /* definition and creation of Control_Pid */
  osThreadDef(Control_Pid, Control_Pid_Main, osPriorityIdle, 0, 128);
  Control_PidHandle = osThreadCreate(osThread(Control_Pid), NULL);

  /* USER CODE BEGIN RTOS_THREADS */
  /* add threads, ... */
  /* USER CODE END RTOS_THREADS */

}

/* USER CODE BEGIN Header_StartDefaultTask */
/**
  * @brief  Function implementing the defaultTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void const * argument)
{
  /* USER CODE BEGIN StartDefaultTask */
  /* Infinite loop */
  for(;;)
  {
//	pid->setpoint=9000;
    osDelay(500);
  }
  /* USER CODE END StartDefaultTask */
}

/* USER CODE BEGIN Header_Control_Pid_Main */
/**
* @brief Function implementing the Control_Pid thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_Control_Pid_Main */
void Control_Pid_Main(void const * argument)
{
  /* USER CODE BEGIN Control_Pid_Main */

  /* Infinite loop */
  for(;;)
  {
//	  HAL_ADC_Start(&hadc1);
//	  uint32_t *volt;
//	  *volt=HAL_ADC_GetValue(&hadc1)*3300;
//	  *volt=*volt>>12;
//	  pid_compute(pid, (float)*volt);
	  uint8_t pData[]="0.001\n";
	  char sData[sizeof(pid.kp)];
	  sprintf(sData,"%f",pid.kp);
	  //HAL_UART_Transmit_IT(&huart1, (uint8_t*)&volt, sizeof(*volt));
	  HAL_UART_Transmit_IT(&huart1, pData, sizeof(pData));
	  HAL_UART_Transmit_IT(&huart1, sData, sizeof(pData));
	  osDelay(300);
  }
  /* USER CODE END Control_Pid_Main */
}

